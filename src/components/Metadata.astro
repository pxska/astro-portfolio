---
const { methods = [], date, role = [] } = Astro.props;
---

{
  role?.length >= 1 && (
    <div class="mb-2">
      <h2 class="text-xs font-semibold text-neutral-900">
        Role
      </h2>
      <div class="text-xs text-neutral-700">
        {role.join(" · ")}
      </div>
    </div>
  )
}

{
  date && (
    <div class="mb-2">
      <h2 class="text-xs font-semibold text-neutral-900">
        Date
      </h2>
      <div class="text-xs text-neutral-700">{date}</div>
    </div>
  )
}

{
  methods.length >= 1 && (
    <div class="mb-8">
      <h2 class="text-xs font-semibold text-neutral-900">
        Methods
      </h2>
      <div class="text-xs text-neutral-700">
        {methods.join(" · ")}
      </div>
    </div>
  )
}
