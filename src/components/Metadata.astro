---
const { methods = [], duration, role = [] } = Astro.props;
---

<div class="mt-40 grid grid-cols-3 gap-8">
  <div>
    <h2 class="text-2xl">Role</h2>
    <div class="text-xl text-slate-800 mt-4">{role.join(" · ")}</div>
  </div>
  <div>
    <h2 class="text-2xl">Duration</h2>
    <div class="text-xl text-slate-800 mt-4">{duration}</div>
  </div>
  <div>
    <h2 class="text-2xl">Methods</h2>
    <div class="text-xl text-slate-800 mt-4">{methods.join(" · ")}</div>
  </div>
</div>
