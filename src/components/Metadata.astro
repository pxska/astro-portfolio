---
const { methods = [], duration, role = [] } = Astro.props;
---

<hr class="my-16 border-[#131313]" />

<div class="metadata-grid">
  <div>
    <h2 class="text-2xl sm:text-lg">Role</h2>
    <div class="text-xl sm:text-lg mt-4">{role.join(" · ")}</div>
  </div>
  <div>
    <h2 class="text-2xl sm:text-lg">Duration</h2>
    <div class="text-xl sm:text-lg mt-4">{duration}</div>
  </div>
  <div>
    <h2 class="text-2xl sm:text-lg">Methods</h2>
    <div class="text-xl sm:text-lg mt-4">{methods.join(" · ")}</div>
  </div>
</div>

<hr class="my-16 border-[#131313]" />

<style>
  .metadata-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(325px, 1fr));
    row-gap: 2rem;
    column-gap: 2rem;
  }
</style>
