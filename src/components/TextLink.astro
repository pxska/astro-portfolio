---
const { href, color } = Astro.props;
---

<a class="insideText text-xl w-fit" href={href}><slot /></a>

<style define:vars={{ backgroundColor: color }}>
  a {
    position: relative;
  }

  a::before {
    content: "";
    position: absolute;
    background-color: var(--backgroundColor);
    left: 0;
    bottom: 0;
    width: 100%;
    height: 8px;
    z-index: -1;
    transition: all 0.3s ease-in-out;
  }

  a:hover::before {
    bottom: 0;
    height: 100%;
  }
</style>
