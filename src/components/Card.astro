---
const { title, description, imageSrc, alt, href } = Astro.props;
---

<a
  href={href}
  class="min-h-80 flex justify-between gap-8 lg:flex-col lg:mb-16 group">
  <div class="flex flex-col gap-4">
    <h2 class="text-5xl sm:text-2xl">{title}</h2>
    <p class="text-2xl sm:text-lg">{description}</p>
  </div>
  <img
    class="object-cover bg-center aspect-video rounded-2xl grayscale transition max-w-md lg:max-w-full group-hover:grayscale-0"
    src={imageSrc}
    alt={alt}
  />
</a>
