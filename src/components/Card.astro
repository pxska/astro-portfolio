---
const { title, description, imageSrc, alt, href, background, laptop } =
  Astro.props;
---

<a
  href={href}
  class={`${background} h-64 sm:h-auto flex justify-between md:flex-col shadow-sm transition-all hover:scale-101 hover:shadow-lg overflow-hidden`}>
  <img
    class={`object-cover ${
      laptop
        ? "sm:object-contain object-right sm:object-center py-10 pr-4 sm:px-4 sm:py-0"
        : "object-top pt-4 px-4"
    } w-1/3 bg-center transition sm:w-full sm:h-80 md:w-full`}
    src={imageSrc}
    alt={alt}
  />

  <div
    class="flex flex-col gap-8 md:gap-4 p-8 sm:px-8 justify-center w-2/3 sm:w-full">
    <h2 class="text-2xl sm:text-lg">
      {title}
    </h2>
    <p class="text-md sm:text-sm">{description}</p>
  </div>
</a>
