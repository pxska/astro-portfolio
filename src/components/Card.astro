---
const {title, description, imageSrc, alt, href} = Astro.props;
---

<a href={href} class="h-80 flex justify-between gap-8 sm:flex-col lg:flex-row group">
  <div class="flex flex-col gap-4">
    <h2 class="text-5xl">{title}</h2>
    <p class="text-2xl">{description}</p>
  </div>
  <img class="object-cover bg-center aspect-video rounded-2xl sm:max-w-full lg:max-w-md group-hover:opacity-80 transition-opacity" src={imageSrc} alt={alt} />
</a>
