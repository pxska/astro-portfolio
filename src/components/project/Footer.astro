---
import Container from "@components/Container.astro";
import { ArrowLeft, ArrowRight } from "lucide-astro";

const { next, nextTitle, previous, previousTitle } =
  Astro.props;
---

<Container>
  <section
    class:list={[
      "flex items-center gap-8",
      { "justify-end": !previous && next },
      { "justify-between": previous && next },
    ]}>
    {
      previous && (
        <a
          class="flex items-center gap-1 text-neutral-500 transition-colors hover:text-inherit"
          href={previous?.url}>
          <ArrowLeft class="h-3 w-3" /> {previousTitle}
        </a>
      )
    }
    {
      next && (
        <a
          class="flex items-center gap-1 text-neutral-500 transition-colors hover:text-inherit"
          href={next?.url}>
          {nextTitle} <ArrowRight class="h-3 w-3" />
        </a>
      )
    }
  </section>
</Container>
