---
import Wrapper from "@components/Wrapper.astro";
import { CornerUpLeft } from "lucide-astro";

const { title, description } = Astro.props;
---

<div class="mb-2 mt-8">
  <Wrapper>
    <a
      class="mb-8 flex items-center gap-2 text-sm leading-6 text-neutral-500 transition-colors hover:text-inherit lg:absolute lg:-left-32"
      href="/">
      <CornerUpLeft class="h-3 w-3" />
       Back
    </a>

    <h1>
      {title}
    </h1>

    <div class="mt-1 text-neutral-500">
      {description}
    </div>
  </Wrapper>
</div>
