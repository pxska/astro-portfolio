---
import Block from "@components/Block.astro";
import Link from "@components/Link.astro";
import Metadata from "@components/Metadata.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Kristjan Poska – Design Engineer">
  <div class="mt-48 sm:mt-24 max-w-prose flex flex-col gap-8">
    <h1 class="text-4xl sm:text-2xl">Playser</h1>

    <p>A tangible design project to help musicians in the future.</p>
  </div>

  <img
    class="object-cover bg-center aspect-video transition max-w-full mt-16 rounded-md"
    src="/images/playser-cover.jpg"
    alt="A man putting his hand into the lasers to play notes on the prototype."
  />

  <Metadata
    role={["Tangible design", "Arduino programming", "Technical bits and bobs"]}
    duration="5 weeks in 2023"
    methods={[
      "Crazy 8-s",
      "Low-fidelity prototyping",
      "High-fidelity prototyping",
      "Hardware & software programming",
      "Exhibition design",
    ]}
  />

  <div class="flex flex-col gap-16">
    <Block title="Summary"><p class="text-xl"></p></Block>
    <Block title="Research"><p class="text-xl"></p></Block>
    <Block title="Exploring & defining"><p class="text-xl"></p></Block>
    <Block title="Developing"><p class="text-xl"></p></Block>
    <Block title="Delivering & listening"><p class="text-xl"></p></Block>

    <section class="flex my-20 items-center justify-between gap-8">
      <a class="text-base hover:text-neutral-600" href="/craft/splitwise"
        >← Previous project (Splitwise)</a
      >
      <a class="text-base hover:text-neutral-600" href="/craft/invl"
        >Next project (INVL) →</a
      >
    </section>
  </div>
</Layout>
