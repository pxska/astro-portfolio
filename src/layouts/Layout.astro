---
import '@fontsource/inter';
import '../styles/globals.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Lorem ipsum dolor sit amet.">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
    <div class="navigation-wrapper">
      <a href="/">âœ± Kristjan Poska</a>
      <nav>
        <ul role="list">
          <li><a href="#craft">Craft</a></li>
          <li><a href="/about">About</a></li>
          <li><a class="contact-button" href="mailto:kristjanposka@gmail.com">Contact</a></li>
        </ul>
      </nav>
    </div>
		<slot />
	</body>
</html>

<style is:global>
	html {
		font-family: "Inter", sans-serif;
    background: linear-gradient(45deg, #FFCB77 0%, #81A684 50%, #6F73D2 100%);
    overscroll-behavior: none;
	}

  body {
    margin-inline: auto;
    padding-inline: 72px;
    max-width: 1400px;
  }

  .navigation-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-block: 24px;
  }

  .navigation-wrapper ul {
    margin: 0;
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .navigation-wrapper a,
  .navigation-wrapper li {
    color: #131313;
    font-size: 14px;
  }

  .navigation-wrapper a:hover,
  .navigation-wrapper li:hover {
    color: #5d5d5d;
  }

  .navigation-wrapper .contact-button {
    border-radius: 16px;
    padding: 4px 8px;
    border: 1px solid #131313;
  }
</style>
