---
import "@styles/globals.css";

import { ArrowUpRight } from "lucide-astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Kristjan Poska is a talented product designer with an ability to think of tomorrow's solutions today."
    />
    <meta name="viewport" content="width=device-width" />

    <meta name="theme-color" content="#F27059" />

    <meta
      property="og:title"
      content="Kristjan Poska â€“ Product Designer"
    />

    <meta
      property="og:description"
      content="Kristjan Poska is a talented product designer with an ability to think of tomorrow's solutions today."
    />

    <meta
      property="og:image"
      content="/images/og-image.png"
    />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon.png"
    />

    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon-32x32.png"
    />

    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon-16x16.png"
    />

    <link rel="manifest" href="/site.webmanifest" />

    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>

  <body class="mx-8 mb-8">
    <nav
      class="mx-auto my-8 flex max-w-xl items-center justify-between">
      <a
        class="hover:text-theme-orange transition-colors"
        href="/">Kristjan Poska</a
      >

      <ul role="list" class="flex items-center gap-4">
        <li>
          <a
            class="hover:text-theme-orange transition-colors"
            href="mailto:kristjanposka@gmail.com">Contact</a
          >
        </li>
        <li class="group">
          <a
            class="group-hover:text-theme-orange transition-colors"
            href="https://read.cv/poska"
            target="_blank"
            >Resume
            <ArrowUpRight
              class="-ml-0.5 inline h-3 w-3 align-text-top"
            />
          </a>
        </li>
      </ul>
    </nav>

    <main class="mx-auto max-w-xl">
      <slot />
    </main>
  </body>
</html>
