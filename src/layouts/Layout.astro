---
import "@fontsource/inter";
import "../styles/globals.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Kristjan Poska is a talented design engineer and interaction design student with a passion for creating beautiful and user-friendly digital experiences."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <div class="mx-auto px-8 max-w-[1200px]">
      <header>
        <nav class="flex items-center justify-between py-6">
          <a class="text-lg sm:text-sm" href="/">âœ± Kristjan Poska</a>
          <ul role="list" class="m-0 flex items-center gap-8 sm:gap-4">
            <li>
              <a
                class="text-lg sm:text-sm hover:bg-[#5688cb] hover:text-white p-2 rounded-lg transition-colors"
                href="/#craft">Craft</a
              >
            </li>
            <li>
              <a
                class="text-lg sm:text-sm hover:bg-[#5688cb] hover:text-white p-2 rounded-lg transition-colors"
                href="/about">About</a
              >
            </li>
            <li>
              <a
                class="text-lg sm:text-sm hover:bg-[#5688cb] hover:text-white p-2 rounded-lg transition-colors"
                href="mailto:kristjanposka@gmail.com?subject=I want to work with you, Kristjan"
                >Contact</a
              >
            </li>
          </ul>
        </nav>
      </header>

      <slot />
